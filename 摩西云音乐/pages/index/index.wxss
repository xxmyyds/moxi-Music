/* 轮播图区域 */
.banners {
  width: 100%;
  height: 300rpx;
}
.banners image {
  width: 100%;
  height: 100%;
}
/* 五个图标导航区域 */
.navContainer {
  display: flex;
}
.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}
.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}
.icon-gedan:before {
  font-size: 50rpx;
}
.navItem text {
  font-size: 26rpx;
}
/* 推荐歌曲区域 */
.recommendContainer {
  position: relative;
  padding: 20rpx;
}

/* 推荐内容区域 */
.recommendScroll {
  display: flex;
  height: 300rpx;
}
.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text {
  font-size: 26rpx;
  /* 单行文本溢出隐藏 省略号代替 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出隐藏 省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /*设置其对齐模式*/
  -webkit-line-clamp: 2; /*设置多行的行数*/
}
.topList {
  position: relative;
  padding: 20rpx;
}
.topListSwiper {
  height: 420rpx;
}
.swiperItem {
  width: 96%;
  background-color: #fbfbfb;
}
.swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem {
  /* 当一个元素设置为flex时，其子元素会自动成为block元素 */
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.toSongSquare{
  position: absolute;
  top: 100rpx;
  right: 17rpx;
  width: 141rpx;
  height: 50rpx;
}
.toTopList{
  position: absolute;
  top: 100rpx;
  right: 18rpx;
  width: 141rpx;
  height: 50rpx;
}