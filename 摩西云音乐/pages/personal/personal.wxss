.cover-container {
  margin-top: -150rpx;
  padding: 0 30rpx;
  position: relative;
  background: #f5f5f5;
  padding-bottom: 20rpx;
}

.cover-container .arc {
  position: absolute;
  left: 0;
  top: -34rpx;
  width: 100%;
  height: 36rpx;
}

/* 导航部分 */
.cover-container .nav-section {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-radius: 15rpx;
}

.nav-section .nav-item {
  width: 25%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-section .nav-item .iconfont {
  font-size: 50rpx;
  color: #d43c33;
  line-height: 70rpx;
}

.nav-section .nav-item text:last-child {
  font-size: 22rpx;
}

/* 个人中心列表 */
.personalContent {
  background: #fff;
  margin-top: 20rpx;
  border-radius: 20rpx;
}

/* 最近播放 */
.personalContent .scrollView {
  display: flex;
  height: 160rpx;
}

.personalContent .recentPlay {
  display: flex;
}

.recentPlayContainer .title {
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 80rpx;
}

.personalContent .recentPlay image {
  width: 160rpx;
  height: 160rpx;
  margin-left: 20rpx;
  border-radius: 20rpx;
}

.cardList {
  margin-top: 20rpx;
}

.cardList .card-item {
  border-top: 1rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx;
  font-size: 26rpx;
  color: #333;
}

.cardList .card-item .more {
  float: right;
  margin-top: 35rpx;
  margin-right: 10rpx;
  width: 13rpx;
  height: 13rpx;
  border-top: 1rpx solid #333333;
  border-right: 1rpx solid #333333;
}

/* 小三角未展开 */
.selectStart {
  transform: rotate(45deg);
  transition: transform 0.2s linear;
}

/* 小三角展开状态 */
.selectChange {
  transform: rotate(135deg);
  transition: transform 0.2s linear;
}

/* 创建歌单未展开状态 */
.playListStart {
  /* height: 0rpx; */
  visibility: hidden;
  opacity: 0;
  height: 0;
}

/* 创建歌单展开状态 */
.playListChange {
  /* height: 500rpx; */
  visibility: visible;
  opacity: 1;
  transition: opacity 0.8s ease;
}

/* 最近播放记录的样式 */
.recentScroll {
  display: flex;
  height: 200rpx;
}

.recentItem {
  margin-right: 20rpx;
}

.recentItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.noRecentPlay {
  text-align: center;
}

/* 我的音乐样式 */
.myMusic {
  overflow: hidden;
  padding: 0 10rpx;
}

/* 我的收藏样式 */
.myCollection {
